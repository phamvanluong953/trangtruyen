<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title><%= title %></title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
	<style>
		.nav-scroller {
			position: relative;
			z-index: 2;
			height: 3rem;
			overflow-y: hidden;
		}

		.nav-scroller .nav {
			display: flex;
			flex-wrap: nowrap;
			padding-bottom: 1rem;
			margin-top: 3px;
			overflow-x: auto;
			text-align: center;
			white-space: nowrap;
			-webkit-overflow-scrolling: touch;
		}

		.card-custom {
			transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
		}

		.card-custom:hover {
			transform: scale(1.05);
			box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
		}

		.badge-hot {
			background-color: #f44336;
			color: white;
		}

		.badge-new {
			background-color: #4caf50;
			color: white;
		}

		.card-title a {
			color: #000;
			text-decoration: none;
		}

		.card-title a:hover {
			color: #000;
			text-decoration: none;
		}

		a.text-decoration-none.text-dark:hover {
			text-decoration: none;
			color: inherit;
		}

		.card-img-top {
			max-height: 150px;
			object-fit: cover;
		}
	</style>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar') %>

		<!-- Thanh thể loại giống home -->
		<div class="nav-scroller py-1 mb-2">
			<nav class="nav d-flex flex-wrap justify-content-start">
				<% if (theloai && theloai.length) { %>
					<% theloai.forEach(function(tl) { %>
						<a class="nav-link p-2 text-decoration-none text-secondary" href="/loc/<%= tl._id %>">
							<%= tl.tentheloai %>
						</a>
					<% }); %>
				<% } %>
			</nav>
		</div>

		<!-- Nội dung chính -->
		<div class="mt-4">
			<h3 class="mb-4 text-primary">Danh sách truyện</h3>

			<% if (!novel || novel.length === 0) { %>
				<div class="alert alert-warning text-center" role="alert">
					<i class="bi bi-exclamation-triangle-fill me-2"></i>Không tìm thấy truyện nào.
				</div>
			<% } else { %>
				<div class="row">
					<% novel.forEach(function(tr) { %>
						<div class="col-md-4 mb-4">
							<a href="/novel/chitiet/<%= tr._id %>" class="text-decoration-none text-dark">
								<div class="card h-100 border-0 shadow-sm card-custom">
									<img src="<%- tr.HinhAnh %>" class="card-img-top" alt="<%= tr.TieuDe %>">

									<div class="card-body">
										<strong class="d-inline-block mb-2 text-primary">
											<%= tr.TheLoai.tentheloai %>
										</strong>

										<h5 class="card-title"><%= tr.TieuDe %></h5>

										<div class="mb-1">
											<% let label = ''; 
												if (tr.LuotXem > 1000) {
													label = 'Truyện Hot';
												} else if (new Date(tr.NgayDang) > new Date(Date.now() - 7 * 24 * 60 * 60 * 1000)) {
													label = 'Mới Đăng';
												}
											%>
											<% if (label) { %>
												<span class="badge <%= label === 'Truyện Hot' ? 'badge-hot' : 'badge-new' %>">
													<%= label %>
												</span>
											<% } %>
										</div>
									</div>
								</div>
							</a>
						</div>
					<% }); %>
				</div>
			<% } %>
		</div>

		<!-- Footer -->
		<%- include('includes/footer') %>
	</div>

	<!-- Scripts -->
	<%- include('includes/javascript') %>
</body>

</html>
