<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <style>
      body {
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
      }

      .login-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .login-card {
        width: 100%;
        max-width: 400px;
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: white;
      }

      .login-header {
        font-size: 24px;
        font-weight: bold;
        color: #e4bb8b;
        text-align: center;
        padding: 20px 0 10px 0;
      }

      .btn-facebook {
        background-color: #e4bb8b;
        border: none;
      }

      .btn-facebook:hover {
        background-color: #d9a96a;
      }

      .btn-create {
        background-color: #1877f2;
        border: none;
      }

      .btn-create:hover {
        background-color: #145dbf;
      }

      .forgot-password {
        display: block;
        text-align: right;
        margin-bottom: 15px;
      }

      .forgot-password a {
        color: #1877f2;
        text-decoration: none;
        font-size: 14px;
      }

      .forgot-password a:hover {
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <%- include('includes/navbar') %>

    <div class="login-wrapper">
      <div class="card login-card">
        <div class="login-header"><%= title %></div>
        <div class="card-body">
          <!-- Hiển thị lỗi nếu có -->
          <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger" role="alert"><%= error %></div>
          <% } %>

          <form
            action="/auth/dangnhap"
            method="post"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                id="TenDangNhap"
                name="TenDangNhap"
                placeholder="Tên Đăng Nhập"
                required
              />
              <div class="invalid-feedback">Vui lòng nhập tên đăng nhập.</div>
            </div>

            <div class="mb-3">
              <input
                type="password"
                class="form-control"
                id="MatKhau"
                name="MatKhau"
                placeholder="Mật khẩu"
                required
              />
              <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
            </div>

            <button
              type="submit"
              class="btn btn-facebook w-100 text-white fw-bold mb-3"
            >
              <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
            </button>
            <hr />
            <div class="forgot-password" style="text-align: center">
              <a href="/auth/quenmatkhau">Quên mật khẩu?</a>
            </div>

            <div class="text-center">
              <a href="/auth/dangky" class="btn btn-create text-white fw-bold">Tạo tài khoản mới</a>
            </div>
          </form>
        </div>
      </div>
    </div>
    </div>

    <%- include('includes/footer') %> <%- include('includes/javascript') %>

    <script>
      (() => {
        "use strict";
        const forms = document.querySelectorAll(".needs-validation");
        Array.from(forms).forEach((form) => {
          form.addEventListener(
            "submit",
            (event) => {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
